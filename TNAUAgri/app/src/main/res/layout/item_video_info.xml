<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="152dp"
        android:layout_height="104dp"
        android:src="@drawable/newthumb"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/video_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/video_thumbnail"
        android:layout_marginStart="8dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/video_duration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_name_text"
        android:layout_toEndOf="@+id/video_thumbnail"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignStart="@+id/video_name_text"/> <!-- Align to the start of video_name_text -->

    <!-- Include Footer Layout -->


</RelativeLayout>
