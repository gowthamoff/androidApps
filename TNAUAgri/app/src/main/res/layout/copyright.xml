<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5D802D">

    <!-- First LinearLayout for "Tamil Nadu Agriculture University" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tamil Nadu Agriculture University"
            android:textColor="#FFFFFF"
            android:background="#5D802D"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5D802D"
            android:gravity="center"
            android:text="© All rights reserved 2008-2023"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Second LinearLayout for "© All rights reserved 2008-2023" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    </LinearLayout>
</LinearLayout>
